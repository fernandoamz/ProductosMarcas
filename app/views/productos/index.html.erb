<p id="notice"><%= notice %></p>

<ul class="inline">
  <li class="list-inline-item"><h1>Productos</h1></li>
  <li class="list-inline-item"><h1>&nbsp;&nbsp;&nbsp;&nbsp;</h1></li>
  <li class="list-inline-item"><%= button_to 'Agregar Marca', new_marca_path, :class =>"btn btn-primary", :method => :get %></li>
  <li class="list-inline-item"><h1>&nbsp;&nbsp;&nbsp;&nbsp;</h1></li>
  <li class="list-inline-item"><%= button_to 'Nuevo Producto', new_producto_path, :class =>"btn btn-primary", :method => :get %></li>
</ul>
</br>
</br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Marca</th>
      <th>Descripcion</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.name %></td>
        <td><%= producto.brand %></td>
        <td><%= producto.description %></td>
        <td><%= producto.price %></td>
        <td><%= link_to 'Ver', producto %></td>
        <td><%= link_to 'Editar', edit_producto_path(producto) %></td>
        <td><%= link_to 'Eliminar', producto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="2"></td>
      <td><strong>Total de los Precios:</strong></td>
       <td>
          <%= @totalPrecios %>
       </td>
    </tr>
  </tbody>
</table>

<br>

