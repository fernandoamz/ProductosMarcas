  <%= form.select :brand, options_from_collection_for_select(Marca.all, :brand, :brand), {include_blank: "-----------"}, {required: 'false', autofocus: 'true', class: 'form-control'}%>

  <div class="field">
    <%= form.label :Descripcion %>
    <%= form.text_field :description, id: :producto_description, :class => 'form-control'  %>
  </div>

  <div class="field">
    <%= form.label :Precio %>
    <%= form.number_field :price, id: :producto_price, :onkeyup => "validateInptPrice();", :class => 'form-control'  %>
  </div>

  </br>
  </br>

   <%= form.submit :class => "btn btn-primary", :onclick => "validateInptName();" %>
  

